<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Categorias.Actualizar_Categoria">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical">


        <!--ID DE CATEGORIAS-->
        <TextView
            android:id="@+id/id_Categorias_A"
            android:hint="@string/id_Categorias_A"
            android:visibility="gone"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>

        <!--UID DE USUARIO CATEGORIAS-->
        <TextView
            android:id="@+id/uid_UsuarioCategorias_A"
            android:hint="@string/uid_UsuarioCategorias_A"
            android:textSize="18sp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>


        <!--CORREO DE USUARIO CATEGORIAS-->
        <TextView
            android:id="@+id/correo_UsuarioCategorias_A"
            android:hint="@string/correo_UsuarioCategorias_A"
            android:textSize="18sp"
            android:visibility="gone"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>

        <!--FECHA Y HORA ACTUAL DEL DISPOSITIVO CATEGORIAS-->
        <TextView
            android:id="@+id/fecha_Hora_RegistroCategorias_A"
            android:hint="@string/fecha_Hora_RegistroCategorias_A"
            android:visibility="gone"

            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>

        <TextView
            android:text="@string/libroCategoria_A"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_marginTop="20dp">
        </TextView>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp">

            <EditText
                android:id="@+id/libroCategoria_A"
                android:inputType="text"
                android:padding="20dp"
                android:drawablePadding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </EditText>
        </com.google.android.material.textfield.TextInputLayout>



        <TextView
            android:text="@string/nombreCategoria_A"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:gravity="center">
        </TextView>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp">

            <EditText
                android:id="@+id/nombreCategoria_A"
                android:inputType="textPersonName|textCapWords"
                android:padding="20dp"
                android:drawablePadding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </EditText>
        </com.google.android.material.textfield.TextInputLayout>


        <TextView
            android:text="@string/descripcion_A"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:gravity="center">
        </TextView>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp">

            <EditText
                android:id="@+id/descripcion_A"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                android:minHeight="150dp"
                android:gravity="start"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </EditText>

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btnUpdateCategoria"
            android:text="@string/btnUpdateCategoria"
            android:layout_marginBottom="15dp"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:backgroundTint="#00A4CC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
        </Button>

    </androidx.appcompat.widget.LinearLayoutCompat>

</ScrollView>